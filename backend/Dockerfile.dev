# Development Dockerfile for Medusa.js
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY package-lock.json* ./

# Install dependencies using npm
RUN if [ -f package-lock.json ]; then \
      npm ci; \
    else \
      npm install; \
    fi

# Copy application files
COPY . .

EXPOSE 9000

CMD ["npm", "run", "dev"]

